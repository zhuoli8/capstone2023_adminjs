{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "skipLibCheck": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}